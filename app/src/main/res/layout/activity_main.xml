<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/device"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/background" />

    <ImageSwitcher
        android:id="@+id/backgound"
        android:layout_width="132dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/device"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:src="@drawable/display_off" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/backgound"
        android:layout_marginTop="15dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/list"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/list"
        android:visibility="gone"
        android:layout_alignTop="@+id/listView"
        android:layout_alignEnd="@+id/circle5" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/delete_button"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/device" />

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignBottom="@+id/backgound"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/circle2"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/circle1"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/circle3"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/circle3"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/circle2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/circle4"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/circle3"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/record"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/circle5"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignEnd="@+id/backgound"
        android:layout_alignTop="@+id/circle4"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="5dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/record"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/backgound"
        android:layout_alignEnd="@+id/circle3"
        android:layout_alignStart="@+id/backgound"
        android:layout_alignTop="@+id/backgound"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/play"
        android:background="#00ff0000"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/rec_button" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/record"
        android:layout_alignEnd="@+id/backgound"
        android:layout_alignTop="@+id/record"
        android:background="#00ff0000"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/play_button" />

    <TextView
        android:id="@+id/text"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/circle1"
        android:layout_alignEnd="@+id/backgound"
        android:layout_alignStart="@+id/backgound"
        android:layout_alignTop="@+id/record"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="5dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="16dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/device"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/whetherDelete"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="27dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="5dp"
        android:text="삭제할까요?"
        android:visibility="gone"
        android:textSize="20dp"
        android:layout_below="@+id/device"
        android:layout_alignStart="@+id/yesButton" />
        <!--android:textColor="#ffffffff"-->

    <Button
        android:id="@+id/yesButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00ff0000"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:text="YES"
        android:textSize="25dp"
        android:visibility="gone"
        android:src="@drawable/rec_button"
        android:layout_below="@+id/whetherDelete"
        android:layout_toStartOf="@+id/noButton" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00ff0000"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:text="NO"
        android:textSize="25dp"
        android:visibility="gone"
        android:src="@drawable/rec_button"
        android:layout_below="@+id/whetherDelete"
        android:layout_toStartOf="@+id/backgound" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <ImageSwitcher
        android:id="@+id/device_on"
        android:layout_width="132dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/device"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#00ff0000"
        android:src="@drawable/display_on"
        android:visibility="invisible">

    </ImageSwitcher>

    <ImageView
        android:id="@+id/device"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/background" />

    <ImageView
        android:id="@+id/information_background"
        android:layout_width="132dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/device"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#00ff0000"
        android:src="@drawable/display_off" />


    <ImageView
        android:id="@+id/backgound_off"
        android:layout_width="132dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/device"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#00ff0000"
        android:src="@drawable/display_off" />

    <ImageView
        android:id="@+id/device_side"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_above="@+id/device"
        android:layout_alignStart="@+id/seekBar"
        android:layout_marginBottom="34dp"
        android:background="#00ff0000"
        android:src="@drawable/device_side" />

    <ImageSwitcher
        android:id="@+id/device_off"
        android:layout_width="132dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/device"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#00ff0000"
        android:src="@drawable/display_off_1"
        android:visibility="invisible" />

    <ImageSwitcher
        android:id="@+id/backgound"
        android:layout_width="132dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/device"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#00ff0000"
        android:clickable="true"
        android:src="@drawable/display_off" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="253dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/list"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="248dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/list_button"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/information"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="247dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/information"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="218dp"
        android:layout_marginTop="246dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/delete_button2"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignBottom="@+id/backgound"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/circle2"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/circle1"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/circle3"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/circle3"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/circle2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/circle4"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignTop="@+id/circle3"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/record"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/circle5"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignEnd="@+id/backgound"
        android:layout_alignTop="@+id/circle4"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="5dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/circle"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/record"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/backgound"
        android:layout_alignEnd="@+id/circle3"
        android:layout_alignStart="@+id/backgound"
        android:layout_alignTop="@+id/backgound"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/play"
        android:background="#00ff0000"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/rec_button" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/record"
        android:layout_alignEnd="@+id/backgound"
        android:layout_alignTop="@+id/record"
        android:background="#00ff0000"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/play_button" />

    //

    <TextView
        android:id="@+id/resultitle"
        android:layout_width="125dp"
        android:layout_height="25dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="248dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="2dp"
        android:text="등록 결과"
        android:textColor="#ffffffff"
        android:textSize="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/playtext"
        android:layout_width="125dp"
        android:layout_height="83dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="268dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="2dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recordtext"
        android:layout_width="125dp"
        android:layout_height="103dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="248dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="2dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recordresult"
        android:layout_width="125dp"
        android:layout_height="78dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="273dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="2dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="16dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/alram"
        android:layout_width="30dp"
        android:layout_height="103dp"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="248dp"
        android:background="#00ff0000"
        android:gravity="center_horizontal|center_vertical"
        android:src="@drawable/alram"
        android:visibility="gone" />

    <TextView
        android:id="@+id/alramtext"
        android:layout_width="125dp"
        android:layout_height="103dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="280dp"
        android:gravity="center_horizontal|center_vertical"
        android:padding="2dp"
        android:text=""
        android:textColor="#ffffffff"
        android:textSize="11dp"
        android:visibility="gone" />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/device"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <TextView
        android:id="@+id/whetherDelete"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="131dp"
        android:layout_marginTop="250dp"
        android:padding="5dp"
        android:text="삭제할까요?"

        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="63dp"
        android:layout_height="65dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="284dp"
        android:background="@android:color/holo_red_dark"
        android:text="YES"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="63dp"
        android:layout_height="65dp"
        android:layout_marginLeft="181dp"
        android:layout_marginTop="284dp"
        android:background="@android:color/darker_gray"
        android:text="NO"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="169dp"
        android:background="#00ff0000"
        android:scaleType="fitXY"
        android:src="@drawable/arrow3" />

    <TextView
        android:id="@+id/numPlayList"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/play"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/countcircle"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>